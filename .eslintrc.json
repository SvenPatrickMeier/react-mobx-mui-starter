{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "jsx": "always"
      }
    ],
    "react/forbid-prop-types": [0, { "forbid": ["string"], "checkContextTypes": false, "checkChildContextTypes": false }],
    "react/destructuring-assignment": [
      0,
      "always",
      {
        "ignoreClassFields": true
      }
    ],
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "no-nested-ternary": 0,
    "react/jsx-props-no-spreading" : 0,
    "max-classes-per-file" : 0,
    "import/no-cycle" : 0,
    "no-console": "off"
  }
}